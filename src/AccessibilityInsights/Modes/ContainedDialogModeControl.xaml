<UserControl x:Class="AccessibilityInsights.Modes.ContainedDialogModeControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" KeyboardNavigation.TabNavigation="Cycle"
             xmlns:dialogs="clr-namespace:AccessibilityInsights.SharedUx.Dialogs;assembly=AccessibilityInsights.SharedUx"
             KeyboardNavigation.DirectionalNavigation="Cycle">
    <UserControl.Background>
        <SolidColorBrush Opacity="0.25" Color="Black"/>
    </UserControl.Background>
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/AccessibilityInsights.SharedUx;component/Resources/Styles.xaml"/>
    </UserControl.Resources>
    <Border BorderBrush="Black" BorderThickness="0" CornerRadius="0" Margin="0,0,0,-52" Name="brdrContainer">
        <Border.Effect>
            <DropShadowEffect Opacity="0.5" BlurRadius="120"></DropShadowEffect>
        </Border.Effect>
        <dialogs:TelemetryApproveContainedDialog/>
    </Border>
</UserControl>
