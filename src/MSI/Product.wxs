    <InstallExecuteSequence>
      <Custom Action='LaunchInstalledExe' After='InstallFinalize'>NOT REMOVE and WIX_UPGRADE_DETECTED and NOT SECONDSEQUENCE</Custom>
    </InstallExecuteSequence>

    <DirectoryRef Id="ApplicationProgramsFolder">
